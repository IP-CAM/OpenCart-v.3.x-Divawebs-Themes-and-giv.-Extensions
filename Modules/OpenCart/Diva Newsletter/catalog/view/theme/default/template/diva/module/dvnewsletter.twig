{% if popup %}
    {% set newsletter_class = "newsletter-popup" %}
{% else %}
    {% set newsletter_class = "newsletter-block" %}
{% endif %}
<div class="newsletter-container {{ newsletter_class }}">
    <div class="newsletter-heading">
        <h3>{{ heading_title }}</h3>
    </div>
    <div class="newsletter-content">
        <p class="newsletter-subtitle">{{ text_subtitle }}</p>
        <p class="newsletter-description">{{ text_description }}</p>
        <div class="content">
            <label>{{ entry_mail }}</label>
            <input type="text" class="newsletter_email" name="mail_subscribe" value="" placeholder="{{ entry_mail_subscribe }}" />
            <button type="button" class="btn btn-primary" onclick="">{{ button_subscribe }}</button>
        </div>
    </div>
</div>